<table>
    <tr>
      <th>Add To Your Decks</th>
      <th>Deck Name</th>
      <th>Created By</th>
    </tr>
<% @decks.each do |deck| %>
    <tr>
      <td><input type="checkbox" name="deck" value="<%= deck.name%>"></td>
      <td><a href="/decks/<%=deck.id%>"><%= deck.name %></a></td>
      <% if !deck.created_by.nil? %>
        <% user = User.find(deck.created_by) %>
      <td><a href="/users/<%=user.id%>"><%=user.name%></a></td>
      <% else %>
      <td>Admin</td>
      <% end %>
<% end %>
</table>
