<div class='welcome'>
  <h2>Flashard stacks on stacks on stacks.</h2>
</div>

<div class='flashcards'>
  <img class='test' src="/images/test.png" alt="Smiley face" height="150" width="300">
  <img class='your' src="/images/your.png" alt="Smiley face" height="150" width="300">
  <img class'knowledge' src="/images/knowledge.png" alt="Smiley face" height="150" width="300">
</div>

<div id="login_area">
  <div class='sign' id="sign_in">
    <h2>Sign In</h2>
    <form action='/users/login' method='post'>
  
      <input class='input-field' type='email' name='email' placeholder='Email'>
      
      <input class='input-field' type='password' name='password' placeholder='Password'>

      <input class='input-button' type="submit" value = "Sign In">
    </form>
  </div>

  <div class='sign' id="sign_up">
    <h2>Sign Up</h2>
      <% if @new_user && @new_user.errors %>
      <%= @new_user.errors.full_messages.join('<br>') %>
      <% end %>

    
    <form action='/users/new' method='post'>
     
      <input class='input-field' type='text' name='name' placeholder='Name' required>

      <input class='input-field' type='email' name='email' placeholder='Email'>

      <input class='input-field' type='password' name='password' placeholder='Password'>

      <input class='input-field' type='password' name='password_confirmation' placeholder='Confirm Password'>
      
      <input class='input-button'type="submit" value = "Sign up">
    </form>
  </div>
</div>


